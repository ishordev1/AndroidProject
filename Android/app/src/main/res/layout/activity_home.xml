<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".home"
    >

   <TextView
       android:layout_width="match_parent"
       android:layout_height="90dp"
       android:gravity="center"
       android:text="All Tools Apps"
       android:background="@color/green"
       android:textSize="50sp"
       android:id="@+id/headerText"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"


       />
   <Button
       android:id="@+id/counterApp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Counter App"
       android:textSize="15sp"
       android:layout_marginTop="5dp"
    android:backgroundTint="@color/blue"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toLeftOf="@+id/notesApp"
       app:layout_constraintTop_toBottomOf="@+id/headerText"
        />

   <Button
       android:id="@+id/notesApp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Notes Apps"
       android:textSize="15sp"
       android:layout_marginTop="5dp"
       android:backgroundTint="@color/blue"
app:layout_constraintLeft_toRightOf="@+id/counterApp"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/headerText"
       />


</androidx.constraintlayout.widget.ConstraintLayout>
